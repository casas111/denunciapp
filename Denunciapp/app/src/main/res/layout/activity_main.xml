<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.denunciapp.app.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context="com.denunciapp.app.MainActivity"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="67dp"
            android:text="Denunciapp"
            android:background="#2f2f2f"
            android:textColor="#d8d2d4"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold|italic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="502dp"
            android:background="#afafaf">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Home"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#1d1b1b"
                android:textStyle="bold|italic"
                android:textSize="40sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ubicacion: "
                android:id="@+id/textView"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="84dp"
                android:textStyle="bold|italic"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_alignBottom="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:layout_marginLeft="29dp"
                android:ems="10"
                android:text="Ingrese su ubicacion" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tipo de emergencia: "
                android:id="@+id/textView2"
                android:layout_marginTop="46dp"
                android:textStyle="bold|italic"
                android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ps"
                android:layout_toRightOf="@+id/textView2"
                android:layout_marginLeft="23dp"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignRight="@+id/editText"
                android:layout_alignEnd="@+id/editText"
                android:entries="@array/emer_arrays"
                android:prompt="@string/emer_prompt" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENVIAR EMERGENCIA"
                android:id="@+id/button"
                android:background="#950000"
                android:textColor="#afafaf"
                android:textStyle="bold|italic"
                android:layout_marginTop="44dp"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignRight="@+id/spinner1"
                android:layout_alignEnd="@+id/spinner1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button2"
                android:layout_below="@+id/button"
                android:layout_alignLeft="@+id/button"
                android:layout_alignStart="@+id/button"
                android:layout_marginTop="68dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button3"
                android:layout_alignTop="@+id/button2"
                android:layout_alignRight="@+id/button"
                android:layout_alignEnd="@+id/button" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
